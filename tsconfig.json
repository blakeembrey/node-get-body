{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": [
      "jest",
      "node"
    ],
    "typeRoots": [
      "typings/globals"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
